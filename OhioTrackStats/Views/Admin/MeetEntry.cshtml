@{
    ViewBag.Title = "Meet Entry";
    ViewBag.MetaDescription = "OhioTrackStats.com Meet Entry";
}

@model OhioTrackStats.ViewModels.Admin.MeetEntryViewModel

<h2>Meet Entry</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedLocationId, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.SelectedLocationId, new SelectList(Model.Locations.Select(y => new { Value = y.Id, Text = $"{y.Address1}, {y.Address2}, {y.City}, {y.State} {y.Zip}" }), "Value", "Text"), new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Date, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
            @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-secondary" })
        </div>
    </div>
}