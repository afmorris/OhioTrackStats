@{
    ViewBag.Title = "Location Entry";
    ViewBag.MetaDescription = "OhioTrackStats.com Location Entry";
}

@model OhioTrackStats.ViewModels.Admin.LocationEntryViewModel

<h2>Location Entry</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(x => x.Address1, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Address1, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Address2, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Address2, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.City, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.City, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.State, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.State, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Zip, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Zip, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
            @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-secondary" })
        </div>
    </div>
}