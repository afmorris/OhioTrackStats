@{
    ViewBag.Title = "Performance Entry";
    ViewBag.MetaDescription = "OhioTrackStats.com Performance Entry";
}

@using OhioTrackStats.Constants
@model OhioTrackStats.ViewModels.Admin.PerformanceEntryViewModel

<h2>Performance Entry</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedEventId, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.SelectedEventId, new SelectList(Model.Events.Select(y => new { Value = y.Id, Text = $"{y.Name} ({y.Gender})" }), "Value", "Text"), new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedSchoolId, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.SelectedSchoolId, new SelectList(Model.Schools.Select(y => new { Value = y.Id, Text = $"{y.Name} ({y.OhsaaTournamentName})"}), "Value", "Text"), new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedMeetId, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.SelectedMeetId, new SelectList(Model.Meets.Select(y => new { Value = y.Id, Text = $"{y.Name} ({y.Date:d})" }), "Value", "Text"), new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Data, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Data, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Date, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.TimingMethod, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.TimingMethod, new SelectList(new List<TimingMethod> { TimingMethod.FullyAutomatic, TimingMethod.Manual, TimingMethod.FieldEvent }), new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Notes, new { @class = "col-sm-2 col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Notes, new { @class = "form-control form-control-lg" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
}